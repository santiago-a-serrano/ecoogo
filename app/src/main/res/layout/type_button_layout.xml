<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/typeToggle"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="0dp"
    android:paddingStart="7dp"
    android:paddingEnd="7dp"
    android:clipToPadding="false"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <Button
        android:id="@+id/iconButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="-2dp"
        android:background="@drawable/back_button_round_type_selector"
        android:clickable="false"
        android:drawableTop="@drawable/bicon_map"
        android:drawablePadding="5dp"
        android:drawableTint="@color/evenDarkerGray"
        android:elevation="5dp"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/typeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/catamaran_semibold"
        android:text="@string/all_types"
        android:textAlignment="center"
        android:textColor="@color/evenDarkerGray"
        android:textSize="9sp"
        app:autoSizeTextType="none"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="56dp" />
</LinearLayout>