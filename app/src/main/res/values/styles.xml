<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryAccentColor</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">
            @color/primaryDarkColor</item>
    </style>


    <style name="BusinessFragmentAddressText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/basic</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="eco_tag_button_style" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/back_eco_tag_button</item>
        <item name="android:capitalize">none</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/basic</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="eco_tag_button_header_style" parent="@style/eco_tag_button_style">
        <item name="android:background">@drawable/back_eco_tag_button_header</item>
        <item name="android:textColor">@color/primaryDarkerColor</item>
    </style>

    <style name="LocationIssuesDialog" parent="@style/Theme.AppCompat.Dialog">

    </style>
</resources>
